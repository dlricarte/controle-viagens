if pages
    nav
        ul.pagination
            - var previous = page - 1;
            li(class="#{previous < 0 ? 'disabled' : ''}")
                a(href='/?page=#{previous}' aria-label='Anterior' disabled=previous < 0)
                    span(aria-hidden='true') &laquo;

            - for (var i = 0; i < pages; i ++)
                li(class="#{i === page ? 'active' : ''}")
                    a(href='/?page=#{i}') #{i + 1}

            - var next = page + 1;
            li(class="#{next >= pages ? 'disabled' : ''}")
                a(href='/?page=#{next}' aria-label='Next' disabled=next >= pages)
                    span(aria-hidden='true') &raquo;